doctype html 
html 
    head
        title #{title}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        
    body

        nav.navbar.navbar-light.navbar-expand-lg.navbar-light.bg-light(style='box-shadow: 0px 1px 10px 0px #e2dede')
            div.container-fluid
                a(href='#', style='color:#7fe5f0; font-size:2em; text-decoration:none; margin-right:200px; font-weight:500') TryExpress.com 
                    
                div.collapse.navbar-collapse#navbarSupportedContent
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item     
                            a.nav-link(href='/', style='font-size:1.5em; color:#00b9c0; font-weight:500; margin-right:50px') Home 
                        li.nav-item 
                            a.nav-link(href='/services', style='font-size:1.5em; color:#00b9cf; font-weight:500; margin-right:50px') Our Services 
                        li.nav-item 
                            a.nav-link.active(href='/contact', style='font-size:1.5em; color:#7fe5f0; font-weight:500; margin-right:50px') Contact Us 
                    form.d-flex(style='padding-top: 10px')
                        input.form-control.me-2(type='search', placeholder='Search', aria-label="Search")
                        button.btn(type='submit', style='background-color:#7fe5f0') Search
            

        div.text-center
            div.container.text-center.w-25.form(style='box-shadow: 0px 5px 10px 0px #e2dede')
                h1.h1.py-4(style='color:#7fe5f0; margin-top:20px') Contact Us

                form(style='margin-left:10px')
                    div.form-group
                        input(type='text', name='name', class='form-control',placeholder='name',style='width:300px')
                    div.form-group
                        input(type='text', name='email', class='form-control',placeholder='Email',style='width:300px; margin-top:20px')
                    div.form-group
                        textarea(name="message", cols="30", rows="10", class='form-control', placeholder='Message', style='width:300px; margin-top:20px')
                    div.form-group
                        input(type='submit',class='btn',value="Send",style='margin-bottom:20px;margin-top:20px;background-color:#7fe5f0')